{
    "name": "story-viewer",
    "version": "1.0.0",
    "private": true,
    "devDependencies": {
      "@esbuild/linux-x64": "^0.19.11",
      "preact": "^10.19.3",
      "sass": "^1.69.6",
      "typescript": "^5.3.3"
    },
    "scripts": {
      "build": "npm run build:js && npm run build:css",
      "build:css": "node ../../node_modules/sass/sass.js sv.scss:../../dist/sv.css --style=compressed --no-source-map",
      "build:js": "../../node_modules/@esbuild/linux-x64/bin/esbuild main.tsx --bundle --outfile=../../dist/story-viewer.js --minify",
      "postbuild": "cp stories.html ../../dist/stories.html"
    }
  }
  
